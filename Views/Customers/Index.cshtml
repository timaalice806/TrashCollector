@model IEnumerable<Trash_Collector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Account Details</h1>

<p>
    <a asp-action="Create">Create New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.PickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.OneTimePickUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.AccountStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.StartDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.EndDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Balance)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.PickUpDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.OneTimePickUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.AccountStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.StartDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.EndDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Balance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
